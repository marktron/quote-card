{
  "name": "quotecard-extension",
  "version": "1.0.0",
  "description": "QuoteCard Safari WebExtension",
  "scripts": {
    "build": "tsc && npm run copy-assets && npm run sync-xcode",
    "copy-assets": "cp -r public/* dist/ && cp src/popup/*.html dist/popup/ && cp src/popup/*.css dist/popup/",
    "sync-xcode": "cp -r dist/* '../app/QuoteCard/QuoteCard Extension/'",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.0.270",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  }
}
